<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="about"
        app:title="@string/about_header">

        <Preference
            app:key="version"
            app:title="@string/version"
            app:summary="1.0.0"/><!-- TODO: app version from manifest/gradle or smth.-->

    </PreferenceCategory>

    <PreferenceCategory
        app:key="general"
        app:title="@string/general_header">

        <ListPreference
            app:key="game_size"
            app:title="@string/game_size"
            app:entries="@array/game_size_human"
            app:entryValues="@array/game_size_data"/>


    </PreferenceCategory>


    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>
