<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hawla.flib">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_flib_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_flib_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.training.TrainingActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".views.training.LoadTrainingActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".views.titlescreen.LaunchAnimationActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.game.LoadGameActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.highscore.HighscoreActivity"
            android:label="@string/highscore"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.gameover.GameOverActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.game.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".views.titlescreen.TitlescreenActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hawla.flib.views.titlescreen.TitlescreenActivity" />
        </activity>
        <activity
            android:name=".views.titlescreen.TitlescreenActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>